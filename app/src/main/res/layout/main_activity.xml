<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:ignore="HardcodedText">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_alpha_aa"
        android:padding="4dp"
        android:text="@string/main_title"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <Button
            android:id="@+id/showXmlUi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/btn_xml_ui" />

        <Button
            android:id="@+id/showComposeUi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/btn_compose_ui" />

    </LinearLayout>

    <Button
        android:id="@+id/showCombinedUi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:paddingBottom="8dp"
        android:text="@string/btn_xml_and_compose_ui" />

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/showBottomSheetUi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:text="BottomSheet" />

        <Button
            android:id="@+id/showDialogUi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:text="Dialog" />

    </LinearLayout>

    <View
        android:layout_width="48dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="10dp"
        android:background="@color/black_alpha_cc" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1">

        <View
            android:id="@+id/lt"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/red_20a"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/t"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/red_20a"
            app:layout_constraintEnd_toStartOf="@+id/rt"
            app:layout_constraintStart_toEndOf="@+id/lt"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/rt"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/red_20a"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/ult"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/yellow_20a"
            app:layout_constraintEnd_toStartOf="@id/t"
            app:layout_constraintTop_toBottomOf="@id/t" />

        <View
            android:id="@+id/urt"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/yellow_20a"
            app:layout_constraintBottom_toBottomOf="@+id/ult"
            app:layout_constraintEnd_toStartOf="@+id/rt"
            app:layout_constraintStart_toEndOf="@+id/t"
            app:layout_constraintTop_toTopOf="@+id/rt" />

        <View
            android:id="@+id/lc"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/green_20a"
            app:layout_constraintBottom_toBottomOf="@+id/c"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/c" />

        <View
            android:id="@+id/c"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/green_20a"
            app:layout_constraintBottom_toTopOf="@+id/b"
            app:layout_constraintEnd_toStartOf="@+id/rt"
            app:layout_constraintStart_toEndOf="@+id/lt"
            app:layout_constraintTop_toBottomOf="@+id/t" />

        <View
            android:id="@+id/rc"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/green_20a"
            app:layout_constraintBottom_toBottomOf="@+id/c"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/c" />

        <View
            android:id="@+id/lb"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/blue_20a"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/b"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/blue_20a"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rt"
            app:layout_constraintStart_toEndOf="@+id/lt" />

        <View
            android:id="@+id/rb"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/blue_20a"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/arb"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/cyan_20a"
            app:layout_constraintBottom_toTopOf="@id/b"
            app:layout_constraintStart_toEndOf="@id/b" />

        <View
            android:id="@+id/alb"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/cyan_20a"
            app:layout_constraintBottom_toBottomOf="@+id/lb"
            app:layout_constraintEnd_toStartOf="@+id/b"
            app:layout_constraintStart_toEndOf="@+id/lb"
            app:layout_constraintTop_toTopOf="@+id/arb" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/uiScale"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="@string/ui_scale_initial"
            android:textSize="12sp" />

        <SeekBar
            android:id="@+id/uiScaleSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:max="120"
            android:min="80"
            android:progress="100" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Guide Style"
            android:textSize="12sp" />

        <RadioGroup
            android:id="@+id/guideStyleGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/guideNone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None" />

            <RadioButton
                android:id="@+id/guideEdge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Edge" />

            <RadioButton
                android:id="@+id/guideFull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Full" />
        </RadioGroup>

    </LinearLayout>

</LinearLayout>
