<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText,SpUsage"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    tools:text="DP">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/toggleInspection"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:elevation="2dp"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_floating_trigger" />

    <TextView
        android:id="@+id/toggleDensity"
        style="@style/TextAppearance.AppCompat.Button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:background="@color/toggle_density_bg"
        android:gravity="center"
        android:text="@string/toggle_density_label"
        android:textColor="@android:color/black"
        android:textSize="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleInspection" />

    <TextView
        android:id="@+id/toggleSeePropertyDetails"
        style="@style/TextAppearance.AppCompat.Button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:background="@color/toggle_props_bg"
        android:contentDescription="@string/cd_toggle_properties"
        android:gravity="center"
        android:text="@string/toggle_properties_label"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleDensity" />

</merge>
